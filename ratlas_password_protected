import hashlib
import secrets
import getpass

def generate_salt():
    """Generate a random salt."""
    return secrets.token_bytes(16)

def hash_password(password, salt):
    """Hash a password with a given salt."""
    return hashlib.pbkdf2_hmac('sha256', password.encode('utf-8'), salt, 100000).hex()

